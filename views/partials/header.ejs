<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>House Storage</title>
        <link rel="stylesheet" href="/stylesheets/app.css">
        <script src="/scripts/Basket.js"></script>
    </head>
    <body class="container">
        <div class="background"></div>
        <div class="squares">
            <div class="square square--1"></div>
            <div class="square square--2"></div>
            <div class="square square--3"></div>
        </div>
        <div class="navigation">
            <ul>
                <li>
                    <div class="navigation__element">
                        <a href="/">
                            <svg class="navigation__icon">
                                <use xlink:href="/icons/sprite.svg#icon-home3"></use>
                            </svg>
                        </a>
                    </div>
                    <span class="navigation__span">Home</span>
                </li>
                <li>
                    <div class="navigation__element">
                        <a href="/items">
                            <svg class="navigation__icon">
                                <use xlink:href="/icons/sprite.svg#icon-file-text2"></use>
                            </svg>
                        </a>
                    </div>
                    <span class="navigation__span">Items</span>
                </li>
                <li>
                    <div class="navigation__element">
                        <a href="/users">
                            <svg class="navigation__icon">
                                <use xlink:href="/icons/sprite.svg#icon-users"></use>
                            </svg>
                        </a>
                    </div>
                    <span class="navigation__span">Users</span>
                </li>
                <li>
                    <div class="navigation__element">
                        <a href="/purchases">
                            <svg class="navigation__icon">
                                <use xlink:href="/icons/sprite.svg#icon-credit-card"></use>
                            </svg>
                        </a>
                    </div>
                    <span class="navigation__span">Purchases</span>
                </li>
                
                <% if(!currentUser) { %>
                    <div class="credentials-background">
                        <div class="navigation__credentials">
                            <div class="navigation__credentials--element">
                                <form action="/login" method="POST" autocomplete="off">
                                    <input type="text" class="login__form-input" name="username" placeholder="Username" required>
                                    <input type="password" class="login__password" name="password" placeholder="Password" required>
                                    <button class="login__button">
                                        <svg class="navigation__credentials--icon">
                                            <use xlink:href="/icons/sprite.svg#icon-enter"></use>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                            <div class="navigation__credentials--element">
                                <a href="/register">
                                    <span class="navigation__credentials--span">Sign up</span>
                                </a>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <li>
                        <div class="navigation__element">
                            <a href="/items/new">
                                <svg class="navigation__icon">
                                    <use xlink:href="/icons/sprite.svg#icon-add-to-list"></use>
                                </svg>
                            </a>
                        </div>
                        <span class="navigation__span">New Item</span>
                    </li>
                    <li>
                        <div class="navigation__element">
                            <a href="/stock"">
                                <svg class="navigation__icon">
                                    <use xlink:href="/icons/sprite.svg#icon-clipboard"></use>
                                </svg>
                            </a>
                        </div>
                        <span class="navigation__span">My Stock</span>
                    </li>
                    <li>
                        <div class="navigation__element">
                            <a href="/basket">
                                <svg class="navigation__icon">
                                    <use xlink:href="/icons/sprite.svg#icon-cart"></use>
                                </svg>
                            </a>
                        </div>
                        <span class="navigation__span">Basket</span>
                    </li>
                    <div class="credentials-background">
                        <div class="navigation__credentials">
                            <div class="navigation__credentials--avatar">
                                <img src="<%= currentUser.avatar%>" alt="">
                            </div>
                            <span class="navigation__credentials--signed-in">
                                Signed in as <span class="navigation__credentials--signed-in__username"><%= currentUser.username %></span>
                            </span>
                            <div class="navigation__credentials--element">
                                <a href="/logout">
                                    <svg class="navigation__credentials--icon">
                                        <use xlink:href="/icons/sprite.svg#icon-exit"></use>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>  
            </ul>
        </div>
    </body>
</html>