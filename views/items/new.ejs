<h1>Add a new item</h1>

<form action="/items/new" method="POST">
    <input type="text" name="items[name]" placeholder="name">
    <input type="text" name="items[image]" placeholder="image">
    <input type="number" name="items[quantity]" placeholder="quantity">
    <input type="number" name="items[reorder_quantity]" placeholder="reorder_quantity">
    <button>Add</button>
</form>

