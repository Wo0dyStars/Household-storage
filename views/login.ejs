<%- include("partials/header"); %>



<div class="login">
    <% if (messages.success) { %>
        <div class="flash flash-success"><%= messages.success %></div>
    <% } %>
    <% if (messages.error) { %>
        <div class="flash flash-success"><%= messages.error %></div>
    <% } %>
    <form class="login__form" action="/login" method="POST" autocomplete="off">
        <div class="login__header">Log into this awesome application</div>
        <div class="login__form-group">
            <input type="text" class="login__form-input" name="username" placeholder="Username" required>
            <label for="username" class="login__form-label">Username</label>
            <span></span>
        </div>
        <div class="login__form-group">
            <input type="password" class="login__password" name="password" placeholder="Password" required>
            <label for="password" class="login__form-label">Password</label>
            <span></span>
        </div>
        <button class="login__button">Sign in</button>
    </form>
</div>